            </intent-filter>
        </activity>
        <activity android:name=".Activities.HomeScreenActivity"/>
        <activity android:name=".Activities.TutorialActivity"/>
        <activity android:name=".Activities.VideoActivity"/>
        <activity android:name=".Activities.FactorActivity"/>
        <activity android:name=".Activities.MultiplyActivity"/>
